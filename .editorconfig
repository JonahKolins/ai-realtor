root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4

[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 4
tab_width = 4

[*.{sass,scss,css}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

[*.md]
trim_trailing_whitespace = false
