{
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.sass", "*.scss"],
            "options": {
                "useTabs": true,
                "tabWidth": 4
            }
        }
    ]
}
